---
import "../styles/global.css";

import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

import { contentfulClient } from "../lib/contentful";

import { ClientRouter } from "astro:transitions";

import "@fontsource/aboreto";
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/600.css";
import "@fontsource/poppins/700.css";

const SeoGet = await contentfulClient.getEntries({
  content_type: "seo",
  limit: 1,
});

const seo_col = SeoGet.items.map((item) => {
  const { nomeDoSite, metaTitle, metaDescription, shareImage } = item.fields;
  return {
    nomeDoSite,
    metaTitle,
    metaDescription,
    shareImage,
  };
});

const seo = seo_col[0];

const { title_sufixo } = Astro.props;
const title = `${seo.nomeDoSite} ${title_sufixo ? " - " + title_sufixo : ""}`;

const MetaTitle = String(seo.metaTitle);

const MetaDescription = String(seo.metaDescription);
const MetaShareImage =''//`${CheckImageUrl(seo.shareImage?.fields.file.url)}`;

const pageURL = import.meta.env.PUBLIC_SITE_URL;

interface Props {
  title_sufixo?: string; // isso faz com que o t√≠tulo seja opcional
}
---

<!doctype html>
<html lang="pt-BR" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <!-- Favicon e Manifest -->
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Kaledo Fotos" />
    <link rel="manifest" href="/site.webmanifest" />

    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={MetaDescription} />

    <!-- Open Graph -->
    <meta property="og:title" content={MetaTitle} />
    <meta property="og:description" content={MetaDescription} />
    <meta property="og:image" content={MetaShareImage} />
    <meta property="og:url" content={pageURL} />
    <meta property="og:type" content="website" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={MetaTitle} />
    <meta name="twitter:description" content={MetaDescription} />
    <meta name="twitter:image" content={MetaShareImage} />
  </head>
  <body>
    <Navbar />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    min-height: 100vh;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  main {
    flex: 1;
  }
</style>
