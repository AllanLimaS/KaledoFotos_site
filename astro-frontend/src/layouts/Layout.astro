---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import "./src/styles/global.css";
import { variavel_constante_teste } from "../constants.ts";

const { title = "Default title" } = Astro.props;


interface Props { 
	title?: string; // isso faz com que o t√≠tulo seja opcional
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
	<span>{variavel_constante_teste}</span>
    <slot />

	<Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
