---
import fetchApi from "../lib/strapi";
import type { SobreMim } from "../interfaces/sobreMim";

const sobreMim: SobreMim = await fetchApi<SobreMim>({
  endpoint: "pagina-sobre-mim",
  query: {
    populate: "Foto",
  },
  wrappedByKey: "data",
});
---

<section id="SobreMin" class="bg-verde h-screen flex items-center justify-center">
  <div
    class="max-w-5xl mx-auto px-6 py-12 flex flex-col md:flex-row items-center gap-8 snap-center"
  >
    <!-- Imagem -->
    <div class="w-full md:w-1/2 flex justify-center">
      <img
        src={`${import.meta.env.STRAPI_URL}${sobreMim.Foto.url}`}
        alt="Foto sobre mim"
        class="w-64 h-80 rounded-full object-cover shadow-lg/50 border-1 border-preto"
      />
    </div>

    <!-- Texto -->
    <div class="w-full md:w-1/2 px-4">
      <h2
        class="text-3xl font-bold mb-4 font-primary text-bege-claro text-shadow-lg/35"
      >
        Sobre mim
      </h2>
      <p
        class="leading-relaxed text-justify font-secondary text-bege-claro text-shadow-lg/30"
      >
        {sobreMim.Texto}
      </p>
    </div>
  </div>
</section>
